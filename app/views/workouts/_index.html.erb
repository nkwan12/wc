<% if @workouts %>
<h1>Listing workouts for <%= current_user.name %></h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Exercises</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.name %></td>
        <td><%= workout.num_exercises %></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% else %>
  <h1><%= "#{current_user.name} has no workouts yet!" %></h1>
<% end %>

<%= link_to 'New Workout', new_workout_path %>
