<div class="container">
  <% if @workouts %>
    <div class="row"><h1><%="#{(current_user.name || current_user.email)}'s" %> Workouts</h1></div>
    <br />
    <div class="row">
      <a href=<%= new_workout_path %> class="btn btn-primary btn-small white" %><span class="glyphicon glyphicon-plus"></span> New Workout</a>
    </div>
    <br />
    <div class="list-group">
      <% @workouts.each do |workout| %>
        <div class="row">
          <a class="list-group-item col-md-6" href=<%= workout_path(workout) %>><%= workout.name %></a>
          <a href=<%= edit_workout_path(workout) %> class="col-md-1 list-group-item btn btn-default btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
          <a href=<%= play_workout_path(workout) %> class="col-md-1 list-group-item btn btn-default btn-sm"><span class="glyphicon glyphicon-play"></span></a>
          <a href="#" data-href=<%= workout_path(workout) %> data-toggle="modal" data-target="#confirm-delete" class="col-md-1 list-group-item btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove delete"></span></a>
        </div>
      <% end %>
    </div>
  <% else %>
    <h1><%= "#{(current_user.name || current_user.email)} has no workouts yet!" %></h1>
    <div class="row">
      <a href=<%= new_workout_path %> class="btn btn-primary btn-small white" %><span class="glyphicon glyphicon-plus"></span> New Workout</a>
    </div>
  <% end %>
</div>
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Delete Workout?</h3>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this workout? This action will be irreversible.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <a href="#" data-method="delete" class="delete-workout-btn btn btn-danger danger white" rel="nofollow">Delete</a>
      </div>
    </div>
  </div>
</div>
