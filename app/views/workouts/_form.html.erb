<%= form_for(@workout) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <% if user_signed_in? %>
  <div class="field">
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>
  <% end %>
    <table class="exercises">
    <tbody>
      <tr>
        <div class="input-group">
        <td><span class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></span></td>
        <td><%= select_tag "exercise[][cat]", options_for_select( ["Exercise", "Rest"] ), class: "form-control" %></td>
        </div>
        <td><%= text_field_tag 'exercise[][name]', nil, {placeholder: "Exercise Name", class: "form-control"} %></td>
        <div class="input-group">
        <td><span class="input-group-addon">Minutes:</span></td>
        <td><%= number_field_tag 'exercise[][dur][minutes]', 0, {size: 5, min: 0, class: "form-control"} %></td>
        </div>
        <div class="input-group">
        <td><span class="input-group-addon">Seconds:</span></td>
        <td><%= number_field_tag 'exercise[][dur][seconds]', 0, {size: 5, min: 0, max: 59, class: "form-control"} %></td>
        </div>
      </tr>
      <tr class="new_exercise hidden">
        <td><span class="glyphicon glyphicon-arrow-right"></span></td>
        <td><%= select_tag "exercise[][cat]", options_for_select( ["Exercise", "Rest"] ) %></td>
        <td><%= text_field_tag 'exercise[][name]', nil, {placeholder: "Exercise Name"} %></td>
        <td><%= number_field_tag 'exercise[][dur][minutes]', 0, {size: 5, min: 0} %></td>
        <td><%= number_field_tag 'exercise[][dur][seconds]', 0, {size: 5, min: 0, max: 59} %></td>
      </tr>
    </tbody>
    </table>
    <%= button_tag "Add Exercise", id: "add_exercise", class: "btn btn-default btn-sm" %>
    <%= f.submit class: "btn btn-default btn-sm" %>
<% end %>
<script>
  $("#add_exercise").bind("click", function(e) {
    var exer = $("tr.new_exercise").clone().removeClass("hidden new_exercise");
    $(".new_exercise").before(exer);
  });
  $(document).on("change", "#exercise__cat", function() {
    if ($(this).val() == "Rest") {
      $(this).parent().next("td").find("input").prop("readOnly", true).val("Rest");
    } else {
      $(this).parent().next("td").find("input").prop("readOnly", false).val("");
    }
  });
  $(".exercises tbody").sortable();
</script>
<style>
  .hidden {
    display: none;
  }
  input[type="number"] {
    width:50px;
  }
</style>
